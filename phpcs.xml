<?xml version="1.0"?>
<ruleset name="PSR-12">
    <description>PSR-12 coding standard configuration</description>

    <!-- Check all files in the project -->
    <file>.</file>

    <!-- Exclude directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/_output/*</exclude-pattern>

    <!-- Use PSR-12 as the base standard without modifications -->
    <rule ref="PSR12"/>

    <!-- Configure colors for command line output -->
    <arg name="colors"/>
    
    <!-- Show progress -->
    <arg value="sp"/>
    
    <!-- Show warnings -->
    <arg value="w"/>
</ruleset>
